.hero-content {
	position: relative;
	min-height: 1000px;
	background-image: url(<%= asset_path('home1.jpg') %>);
	background-repeat: no-repeat;
	background-position: center center;
	background-size: cover;
	margin-top: -200px;
}

.hero-content .hero-title {
	position: absolute;
	top: 40%;
	-webkit-transform: translateY(-50%);
	-moz-transform: translateY(-50%);
	-ms-transform: translateY(-50%);
	transform: translateY(-50%);
	width: 100%;
	text-align: left;
	margin-left: 60px;
	font-size: 2.5rem;
	font-weight: 600;
	text-transform: uppercase;
	letter-spacing: 0.5rem;
	text-shadow: 1px 1px 0px #C5C5C5;
}

.hero-content .btn {
  position: absolute;
	top: 50%;
	-webkit-transform: translateY(-50%);
	-moz-transform: translateY(-50%);
	-ms-transform: translateY(-50%);
	transform: translateY(-50%);
	margin-left: 50px;
	font-size: 30px;
	border: none;
	color: black;
	background-color: #FED100;
	font-weight: bold;
}

.hero-content .btn:hover {
  color: #121212;
  background-color: #FEDD46;
  border: none;
}

.selling-points {
	position: relative;
}

.point {
	position: relative;
	padding: 2rem;
	text-align: center;
}

.point .point-title {
	font-size: 1.25rem;
}

.ion-person-add,
.ion-ios-chatbubble,
.ion-iphone {
	color: #66a6ff;
	font-size: 5rem;
}

